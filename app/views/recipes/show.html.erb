<%- model_class = Recipe -%>

<div class="container">
  <div class="page-header">
    <p>
    <%= link_to_unless I18n.locale == :en, "English", locale: :en %>
    |
    <%= link_to_unless I18n.locale == :de, "German", locale: :de %>
    </p>
    <h1><%= t 'recipe' %></h1>
  </div>

  <div class="row">
    <div class="span12">
      <div class="well">
        <h4><%= @recipe.title %></h4>
        <p><%= @recipe.description %></p>
        <h6><%= t 'ingredients' %></h6>
        <p><%= @recipe.ingredients %></p>
        <h6><%= t 'preparation_method' %></h6>
        <p><%= @recipe.preparation_method %></p>
        <div class="form-actions">
          <%= link_to t('back', :default => t("back")),
                      recipes_path, :class => 'btn'  %>
          <%= link_to t('edit', :default => t("edit")),
                      edit_recipe_path(@recipe), :class => 'btn' %>
          <%= link_to t('destroy', :default => t("destroy")),
                      recipe_path(@recipe),
                      :method => 'delete',
                      :data => { :confirm => t('confirm', :default => t("confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-danger' %>
        </div>
      </div>
    </div>
  </div>
</div>